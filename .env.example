# LLM API 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo  # 或者 gpt-3.5-turbo
GROK_API_KEY=your_grok_api_key_here
GROK_MODEL=grok-3

# LLM 服务配置
DEFAULT_LLM_SERVICE=auto  # 可选值: auto, openai, grok

# 系统配置
MAX_PDF_SIZE_MB=50  # 最大允许的PDF文件大小（MB）
CHUNK_SIZE=800      # 文本分块大小
CHUNK_OVERLAP=200   # 文本分块重叠大小
VECTOR_DB_PATH=./vector_db  # 向量数据库存储路径
MEMORY_DIR=./memory        # 记忆文件存储路径
OUTPUT_FILE=pdf_analysis_results.md  # 输出文件路径
